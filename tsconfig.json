{
  "compilerOptions": {
    "typeRoots": ["./src/typings", "node_modules/@types"],
    "rootDirs": ["src"],
    "outDir": "./build/",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "lib": ["es5", "es6", "es7", "es2018", "dom"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "env/validator.ts", "env/env.js"],
  "exclude": ["node_modules", "node_modules/@types", "./**/*.js", "./**/*.json", "build", "scripts"]
}
